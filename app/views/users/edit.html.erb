<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div>
        <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, id:"user_name" %>
      </div>
      <div>
        <label for="user_image">Image</label>
        <%= f.file_field :user_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div>
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :body, autofocus: true, id:"user_introduction" %>
      </div>
      <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>