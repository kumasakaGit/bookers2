<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'sideuser', users: @users, books: @books %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
                <% if @user.image.attached? %>
                  <%= image_tag @user.image, size: "100*100" %>
                <% else %>
                  <%= image_tag 'no_image', size: "100*100" %>
                <% end %>
            </td>
            <td>
              <%= user.mame %>
            </td>
            <td>
              <%= link_to "Show", users_path(user.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>